{
  "name": "cell-monitor-server",
  "version": "1.0.0",
  "description": "Cell Monitor PWA Server",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && electron .",
    "dev": "tsc && electron .",
    "dist": "npm run build && electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "electron": "^28.0.0",
    "express": "^4.21.2",
    "msnodesqlv8": "^5.1.5",
    "mssql": "^10.0.4",
    "qrcode": "^1.5.3"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/node": "^20.10.0",
    "electron-builder": "^24.9.0",
    "typescript": "^5.3.0"
  },
  "build": {
    "appId": "com.cellmonitor.server",
    "productName": "Cell Monitor Server",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico"
    },
    "files": [
      "dist/**/*",
      "src/index.html",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "release"
    }
  }
}
